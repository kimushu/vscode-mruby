{
  "name": "mruby",
  "displayName": "mruby",
  "description": "mruby support for VSCode (Lightweight implementation of Ruby language)",
  "version": "0.0.1",
  "publisher": "kimushu",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "mrbc",
        "properties": {
          "version": {
            "type": "string",
            "description": "%contrib.taskDef.prop.version.desc%",
            "enum": [
              "1.4.1",
              "2.0.0"
            ]
          },
          "watch": {
            "type": "boolean",
            "description": "%contrib.taskDef.mrbc.prop.watch.desc%"
          },
          "output": {
            "type": "string",
            "description": "%contrib.taskDef.mrbc.prop.output.desc%"
          },
          "debug": {
            "type": "boolean",
            "description": "%contrib.taskDef.mrbc.prop.debug.desc%"
          },
          "symbol": {
            "type": "string",
            "description": "%contrib.taskDef.mrbc.prop.symbol.desc%"
          },
          "endian": {
            "type": "string",
            "enum": [
              "little",
              "big"
            ],
            "description": "%contrib.taskDef.mrbc.prop.endian.desc%"
          },
          "include": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              {
                "type": "string"
              }
            ],
            "description": "%contrib.taskDef.mrbc.prop.include.desc%"
          },
          "exclude": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              {
                "type": "string"
              }
            ],
            "description": "%contrib.taskDef.mrbc.prop.exclude.desc%"
          },
          "verbose": {
            "type": "boolean",
            "description": "%contrib.taskDef.prop.verbose.desc%"
          }
        }
      },
      {
        "type": "mruby",
        "required": [
          "file"
        ],
        "properties": {
          "version": {
            "type": "string",
            "description": "%contrib.taskDef.prop.version.desc%",
            "enum": [
              "1.4.1",
              "2.0.0"
            ]
          },
          "file": {
            "type": "string",
            "description": "%contrib.taskDef.mruby.prop.file.desc%"
          },
          "verbose": {
            "type": "boolean",
            "description": "%contrib.taskDef.prop.verbose.desc%"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "mrbc",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "severity": "error"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "@types/sprintf-js": "^1.1.1",
    "@types/tempy": "^0.2.0",
    "tslint": "^5.8.0",
    "typescript": "^3.1.4",
    "vscode": "^1.1.25"
  },
  "dependencies": {
    "chokidar": "^2.0.4",
    "glob": "^7.1.3",
    "sprintf-js": "^1.1.2",
    "tempy": "^0.2.1"
  }
}
