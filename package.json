{
  "name": "mruby",
  "displayName": "mruby",
  "description": "mruby support for VSCode (Lightweight implementation of Ruby language)",
  "version": "1.0.0",
  "publisher": "kimushu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kimushu/vscode-mruby.git"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onDebug",
    "onDebugInitialConfigurations",
    "onLanguage:ruby"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "mrdb",
        "label": "%contrib.debug.mrdb.label%",
        "languages": [
          "ruby"
        ],
        "program": "./out/debug/adapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "%contrib.debug.mrdb.configAttr.launch.program.desc%"
              },
              "mrubyVersion": {
                "type": "string",
                "description": "%contrib.common.version.desc%",
                "enum": [
                  "1.4.1",
                  "2.0.0"
                ]
              }
            }
          }
        }
      },
      {
        "type": "mruby",
        "label": "%contrib.debug.mruby.label%",
        "languages": [
          "ruby"
        ],
        "program": "./out/debug/adapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "%contrib.debug.mruby.configAttr.launch.program.desc%"
              },
              "verbose": {
                "type": "boolean",
                "description": "%contrib.common.verbose.desc%"
              },
              "mrubyVersion": {
                "type": "string",
                "description": "%contrib.common.version.desc%",
                "enum": [
                  "1.4.1",
                  "2.0.0"
                ]
              }
            }
          }
        }
      }
    ],
    "languages": [
      {
        "id": "mrb",
        "extensions": [
          ".mrb"
        ]
      }
    ],
    "taskDefinitions": [
      {
        "type": "mrbc",
        "properties": {
          "mrubyVersion": {
            "type": "string",
            "description": "%contrib.common.version.desc%",
            "enum": [
              "1.4.1",
              "2.0.0"
            ]
          },
          "watch": {
            "type": "boolean",
            "description": "%contrib.taskDef.mrbc.prop.watch.desc%"
          },
          "output": {
            "type": "string",
            "description": "%contrib.taskDef.mrbc.prop.output.desc%"
          },
          "debug": {
            "type": "boolean",
            "description": "%contrib.taskDef.mrbc.prop.debug.desc%"
          },
          "symbol": {
            "type": "string",
            "description": "%contrib.taskDef.mrbc.prop.symbol.desc%"
          },
          "endian": {
            "type": "string",
            "enum": [
              "little",
              "big"
            ],
            "description": "%contrib.taskDef.mrbc.prop.endian.desc%"
          },
          "include": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              {
                "type": "string"
              }
            ],
            "description": "%contrib.taskDef.mrbc.prop.include.desc%"
          },
          "exclude": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              {
                "type": "string"
              }
            ],
            "description": "%contrib.taskDef.mrbc.prop.exclude.desc%"
          },
          "verbose": {
            "type": "boolean",
            "description": "%contrib.common.verbose.desc%"
          }
        }
      },
      {
        "type": "mruby",
        "required": [
          "file"
        ],
        "properties": {
          "mrubyVersion": {
            "type": "string",
            "description": "%contrib.common.version.desc%",
            "enum": [
              "1.4.1",
              "2.0.0"
            ]
          },
          "file": {
            "type": "string",
            "description": "%contrib.taskDef.mruby.prop.file.desc%"
          },
          "verbose": {
            "type": "boolean",
            "description": "%contrib.common.verbose.desc%"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "mrbc",
        "fileLocation": "relative",
        "pattern": "$mrbc",
        "source": "mrbc"
      },
      {
        "name": "mrbc-watch",
        "fileLocation": "relative",
        "pattern": "$mrbc",
        "source": "mrbc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "^\\[\\d{2}:\\d{2}:\\d{2}\\] File change detected"
          },
          "endsPattern": {
            "regexp": "^\\[\\d{2}:\\d{2}:\\d{2}\\] Found \\d+ errors?"
          }
        }
      }
    ],
    "problemPatterns": [
      {
        "name": "mrbc",
        "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
        "file": 1,
        "line": 2,
        "column": 3,
        "message": 4
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run localize",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "localize": "gulp build",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/dedent": "^0.7.0",
    "@types/download": "^6.2.4",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "@types/sprintf-js": "^1.1.1",
    "@types/tar": "^4.0.0",
    "@types/tempy": "^0.2.0",
    "del": "^3.0.0",
    "event-stream": "3.3.4",
    "gulp": "^3.9.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-typescript": "^5.0.0",
    "run-sequence": "^2.2.1",
    "tslint": "^5.8.0",
    "typescript": "^3.1.4",
    "vsce": "^1.55.0",
    "vscode": "^1.1.25",
    "vscode-nls-dev": "^3.2.3"
  },
  "dependencies": {
    "chokidar": "^2.0.4",
    "dedent": "^0.7.0",
    "download": "^7.1.0",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "lzma": "^2.3.2",
    "sprintf-js": "^1.1.2",
    "tar": "^4.4.8",
    "tempy": "^0.2.1",
    "vscode-debugadapter": "^1.33.0",
    "vscode-debugprotocol": "^1.33.0",
    "vscode-nls": "^4.0.0"
  }
}
